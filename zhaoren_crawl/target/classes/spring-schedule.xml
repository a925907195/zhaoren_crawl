	<!-- <context:annotation-config /> <context:component-scan base-package="lotus.oracle.schedule" /> -->
   
   <!-- MysqlAirportsPullTask -->
		<bean id="mysqlAirportsPullTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<bean class="com.qunar.ittsb2b.lotus.pull.task.MysqlAirportsPullTask" />
		</property>
		<property name="targetMethod" value="pullDataFromOracle" />
		<property name="concurrent" value="false" /><!-- 作业不并发调度 -->
	</bean>
	<bean id="mysqlAirportsPullTaskTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="mysqlAirportsPullTask" />
		<property name="cronExpression" value="0 0/3 * * * ?" />
	</bean>	
	
